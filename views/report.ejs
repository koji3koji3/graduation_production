<%- include('./header') %>
<body class="bg-light">
    <div class="container">
        <!-- card -->
        <div>
            <form action=""　class="bg-light">
                <h4 class="text-center mt-3 bg-danger">遅刻・欠席報告</h4>
                <div class="form-group">
                    <label for="reportCategory" class="row ml-1">
                        <h5>報告種別</h5>
                    </label>
                    
                    <select class="form-control row ml-1 w-50" name="reportCategory" required>
                        <option value="">選択してください</option>
                        <% for (var i = 0; i < reportCategory.length; i++) { %>
                            <option value="<%= reportCategory[i] %>"><%= reportCategory[i] %></option>
                        <% } %>
                    </select>
                </div>
                
                <!--  -->
                <div class="form-group">
                    <label for="attendance" class="row ml-1">
                        <h5>登校予定時間</h5>
                    </label>
                    <select class="form-control row ml-1 w-50" name="reportCategory" required>
                        <option value="">選択してください</option>
                        <% for (var i = 1; i < 7; i++) { %>
                            <option value="<%= i %>"><%= i %>時間目</option>
                        <% } %>
                            
                    </select>
                    
                </div>

                <div class="form-group">
                    <label for="reportDetail" class="row ml-1"><h5>報告内容</h5></label>
                    <!-- <input type="text" class="form-control" id="exampleDropdownFormPassword2" placeholder="Password"> -->
                    <textarea class="form-control ml-1" name="reportDetail" id="" cols="10" rows="4" ></textarea>
                </div>
                
                <div class="row mx-auto" style="widows: 50%;">
                    <button type="submit" class="btn btn-success ">送信</button>
                </div>

            </form>
                
        </div>
            
    </div>
</body>
<%- include('./footer') %>